<Window x:Class="JopSchemaEditor.TextWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JopSchemaEditor"
        mc:Ignorable="d"
        Title="Text" Width="300" SizeToContent="Height">
    <StackPanel Margin="10">
        <TextBox x:Name="textField" Margin="10" />
        <ComboBox x:Name="color" Margin="10" SelectedIndex="0" />
        <Button Margin="10" Content="Uložit" Click="Button_Click" />
    </StackPanel>
</Window>
