<Window x:Class="JopSchemaEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mg="clr-namespace:MonoGame.WpfCore.MonoGameControls"
        xmlns:local="clr-namespace:JopSchemaEditor"
        mc:Ignorable="d"
        Title="JOP editor" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Background="Blue" Foreground="White" Padding="10,5" BorderThickness="0">
            <MenuItem Header="Soubor">
                <MenuItem Header="Nový" Foreground="Black" />
                <MenuItem Header="Otevřít..." Foreground="Black" />
                <MenuItem Header="Uložit" Foreground="Black" />
                <MenuItem Header="Uložit jako..." Foreground="Black" />
            </MenuItem>
        </Menu>
        
        <mg:MonoGameContentControl x:Name="JopControl" Grid.Row="1">
            <mg:MonoGameContentControl.DataContext>
                <local:JOP />
            </mg:MonoGameContentControl.DataContext>
        </mg:MonoGameContentControl>
    </Grid>
</Window>
